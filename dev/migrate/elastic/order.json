{
    "settings": {
        "number_of_shards": 1,
        "refresh_interval": "1s",
        "max_result_window": 10000,
        "analysis": {
            "filter": {
                "english_stop": {
                    "type": "stop",
                    "stopwords": "_english_"
                },
                "english_stemmer": {
                    "type": "stemmer",
                    "language": "english"
                },
                "english_possessive_stemmer": {
                    "type": "stemmer",
                    "language": "possessive_english"
                },
                "russian_stop": {
                    "type": "stop",
                    "stopwords": "_russian_"
                },
                "russian_stemmer": {
                    "type": "stemmer",
                    "language": "russian"
                },
                "russian_hunspell": {
                    "type": "hunspell",
                    "locale": "ru_RU",
                    "dedup": true
                },
                "greek_stop": {
                    "type": "stop",
                    "stopwords": "_greek_"
                },
                "greek_stemmer": {
                    "type": "stemmer",
                    "language": "greek"
                }
            },
            "char_filter": {
                "e_sort_char_filter": {
                    "type": "mapping",
                    "mappings": [
                        "Ё=>Е2",
                        "ё=>е2",
                        "Е=>Е1",
                        "е=>е1"
                    ]
                },
                "e_char_filter": {
                    "type": "mapping",
                    "mappings": [
                        "Ё => Е",
                        "ё => е"
                    ]
                },
                "combining_character_char_filter": {
                    "type": "pattern_replace",
                    "pattern": "(\\p{M}| \\p{M} )",
                    "replacement": ""
                },
                "black_list_char_filter": {
                    "type": "pattern_replace",
                    "pattern": "[“＂〟〞〝❯❮❟❞❝❜❛›‹…‟„”‛‚’‘»«.#\"]",
                    "replacement": ""
                }
            },
            "normalizer": {
                "sort_normalizer": {
                    "type": "custom",
                    "char_filter": [
                        "e_sort_char_filter"
                    ],
                    "filter": [
                        "lowercase"
                    ]
                }
            },
            "analyzer": {
                "base_analyzer": {
                    "tokenizer": "standard",
                    "filter": [
                        "lowercase"
                    ]
                },
                "multi-language_analyzer": {
                    "tokenizer": "standard",
                    "filter": [
                        "lowercase",
                        "russian_stop",
                        "russian_hunspell",
                        "english_possessive_stemmer",
                        "english_stop",
                        "english_stemmer"
                    ],
                    "char_filter": [
                        "e_char_filter",
                        "combining_character_char_filter"
                    ]
                }
            }
        }
    },
    "mappings": {
        "properties": {
            "id": {
                "type": "keyword"
            },
            "user_id": {
                "type": "keyword"
            },
            "name": {
                "type": "text",
                "analyzer": "multi-language_analyzer",
                "fields": {
                    "keyword": {
                        "type": "keyword",
                        "normalizer": "sort_normalizer"
                    }
                }
            },
            "description": {
                "type": "text",
                "analyzer": "multi-language_analyzer"
            },
            "status": {
                "type": "integer"
            }
        }
    }
}